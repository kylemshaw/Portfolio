<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clAgentContact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgentContactActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/travel5"
        android:backgroundTint="#D848A8F7"
        android:backgroundTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivAgentPhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                tools:srcCompat="@drawable/profilepic_transparent" />

            <!--            <ImageView-->
            <!--                android:id="@+id/ivAgentPhoto"-->
            <!--                android:layout_width="200dp"-->
            <!--                android:layout_height="200dp"-->
            <!--                android:layout_marginTop="25dp"-->
            <!--                tools:srcCompat="@drawable/profilepic" />-->

            <TextView
                android:id="@+id/tvAgentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="First Last"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAgtEmail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="emailstuff@travelexperts.ca"
                android:textColor="@color/material_on_background_emphasis_high_type"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvAgtBusPhone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="555-555-5555"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvAgencyCity"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Travel Experts Calgary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAgencyAddress"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="1155 8th Ave SW"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvAgencyPhone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="555-555-5555"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Back"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>