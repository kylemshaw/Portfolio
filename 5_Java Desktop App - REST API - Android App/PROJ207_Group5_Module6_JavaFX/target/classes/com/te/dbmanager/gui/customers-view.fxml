<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vbCustomers" alignment="CENTER" stylesheets="@Snow_style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.te.dbmanager.gui.CustomerController">
   <children>
      <TableView fx:id="tvCustomers" maxWidth="-Infinity" prefHeight="555.0" prefWidth="915.0">
         <columns>
            <TableColumn fx:id="colCustomerId" minWidth="50.0" prefWidth="50.0" styleClass="colCenter" text="ID" />
            <TableColumn fx:id="colCustFirstName" maxWidth="130.0" minWidth="130" prefWidth="130" text="First Name" />
            <TableColumn fx:id="colCustLastName" maxWidth="130.0" minWidth="130" prefWidth="130" text="Last Name" />
<!--            <TableColumn fx:id="colCustAddress" minWidth="100.0" prefWidth="100.0" text="Address" />-->
            <TableColumn fx:id="colCustCity" maxWidth="130.0" minWidth="130" prefWidth="130" text="City" />
            <TableColumn fx:id="colCustProv" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" styleClass="colCenter" text="Prov." />
<!--            <TableColumn fx:id="colCustPostal" minWidth="60.0" prefWidth="60.0" text="Postal" />-->
<!--            <TableColumn fx:id="colCustCountry" minWidth="60.0" prefWidth="60.0" text="Country" />-->
<!--            <TableColumn fx:id="colCustHomePhone" minWidth="80.0" text="Home Ph." />-->
<!--            <TableColumn fx:id="colCustBusPhone" minWidth="80.0" text="Business Ph." />-->
<!--            <TableColumn fx:id="colCustEmail" minWidth="150.0" prefWidth="150.0" text="Email" />-->
            <TableColumn fx:id="colCustAgent" maxWidth="150.0" minWidth="150" prefWidth="150" text="Agent" />
         </columns>
      </TableView>
      <HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="915.0">
         <children>
            <Button fx:id="btnAddCustomer" minWidth="68.0" mnemonicParsing="false" prefWidth="68.0" text="Add">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
             <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="btnEditCustomer" disable="true" minWidth="68.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="68.0" text="Edit">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnDeleteCustomer" disable="true" minWidth="68.0" mnemonicParsing="false" prefWidth="68.0" text="Delete">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="35.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
